@{
    ViewBag.Title = "Consume";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源分项</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css" href="~/Content/css/EnergyDfficiency.css?v=1.04" />
</head>
<body>
    <div id="app">
        <div class="left flex-item">
            <div class="module-title">
                <img src="~/Content/images/energyDifficiency/yc.png" class="icon" />
                <Dropdown placement="top-start" trigger="click">
                    <span class="dropdownTitle">
                        能源分项解构
                        <Icon type="md-arrow-dropdown" size="25"/>
                    </span>
                    <dropdown-menu slot="list">
                        <dropdown-item>楼</dropdown-item>
                        <dropdown-item>科室</dropdown-item>
                        <dropdown-item>房间</dropdown-item>

                    </dropdown-menu>
                </Dropdown>
                <!--<span>能源分项解构</span>-->
                <button class="btn">加入对比</button>
            </div>
            <div class="treeList">
                <Tree :data="treeData"  show-checkbox class="tree"></Tree>
            </div>
        </div>

        <div class="right flex-item">
            <div class="top">

                <div class="right-top-left">
                    <div class="module-title">
                        <img src="~/Content/images/energyDifficiency/barAndLine.png" class="icon" />
                        <span>实时用电趋势</span>
                    </div>
                    <div class="barAndLine">
                        <p class="subTitle">电费趋势图(kW·h)</p>
                        <div class="datePicekerView">
                            <date-picker type="date" size="small"></date-picker>
                        </div>
                        <div id="barAndLine" class="chart" style="width:100%;height:100%"></div>
                    </div>
                </div>
            </div>


            <div class="bottom">
                <div class="module-title">
                    <img src="~/Content/images/energyDifficiency/barAndLine.png" class="icon" />
                    <span>用电对比信息表</span>
                </div>
                <div>
                    <i-table border ref="selection" :columns="analysisColumns" :data="analysisData" :height="analysisTableHeight"></i-table>
                </div>
            </div>
        </div>

    </div>



    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script type="text/javascript" src="~/Content/UserJS/SubItem._zc.js?v=1.04"></script>
</body>
</html>

