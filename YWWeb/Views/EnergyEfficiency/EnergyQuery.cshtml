@{
    ViewBag.Title = "EnergyFormula";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源查询</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css"  href="~/Content/css/EnergyDfficiency.css?v=1.01"/>
</head>
<body>
    <div id="app" class="noPaddingBottom" style="background:#fff;padding:0;margin:0">
        
        <!--right s-->
        <div class="right allMain">
            <div class="topView main-item searchView">
                <div class="module-title">
                    <span>能源查询</span>
                    <i-button class="btn">查询</i-button>
                </div>
                <div class="con" style="flex:1">
                    <i-form ref="searchForm" :model="searchForm"  style="width:100%;z-index:1500" :label-width="80" >
                        <table class="formTable">
                            <tr>
                                <td>
                                    <form-item label="时间">
                                        <date-picker type="date" v-model="searchForm.time" style="width:100%" :clearable="false"></date-picker>
                                    </form-item>
                                </td>
                                <td>
                                    <form-item label="设备">
                                        <i-select v-model="searchForm.equipment" :filterable="true">
                                            <i-option :value="0" :key="0">急诊科</i-option>
                                            <i-option :value="1" :key="1">内科</i-option>
                                        </i-select>
                                    </form-item>
                                </td>
                                <td>
                                    <form-item label="科室">
                                        <i-select v-model="searchForm.department" :filterable="true" multiple>
                                            <i-option :value="item.id" :key="item.id" v-for="item in departMentList">{{item.Name}}</i-option>
                                        </i-select>
                                    </form-item>
                                </td>
                                <td>
                                    <form-item label="类型">
                                        <i-select v-model="searchForm.type" :filterable="true">
                                            <i-option :value="item.ID" :key="item.ID"  v-for="item in typeList">{{item.Name}}</i-option>
                                        </i-select>
                                    </form-item>
                                </td>
                            </tr>
                            
                        </table>
                    </i-form>
                </div>
               
            </div>

            <div class="bottomView main-item underFormView">
                <div class="module-title">
                    <span>查询结果</span>
                </div>
                <div class="con">
                    <i-table :columns="tableCol" :data="tableData" :height="tableHeight" border></i-table>
                </div>
                
            </div>
        </div>
        <!--right e-->
    </div>

    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script  type="text/javascript" src="~/Content/UserJS/EnergyQuery._zc.js?v=1.07"></script>
</body>
</html>

