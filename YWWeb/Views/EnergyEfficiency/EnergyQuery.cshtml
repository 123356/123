@{
    ViewBag.Title = "EnergyQuery";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源查询</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.02">
    <link rel="stylesheet" type="text/css" href="~/Content/css/EnergyDfficiency.css?v=1.11" />
    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/jquery-easyui-1.4.5/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="~/jquery-easyui-1.4.5/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/jquery-easyui-1.4.5/themes/bootstrap/easyui.css" />
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <style type="text/css">
        .minWidth {
            min-width: 160px
        }

        .ivu-tag .ivu-icon-ios-close {
            display: inline-block !important
        }

        .ivu-select-input {
            height: 28px
        }

        .ivu-input {
            height: 28px
        }

        .ivu-form-item {
            margin-bottom: 0
        }
    </style>
</head>
<body>
    <div id="app" class="noPaddingBottom" style="background:#fff;padding:0;margin:0">
        <div class="right allMain">
            <div class="topView main-item searchView">
                <div class="module-title" style="overflow:inherit">
                    <div style="float:left;margin-top:4px">
                        <img src="~/Content/images/energyDifficiency/fx.png" class="icon" />
                        <span>能源查询</span>
                    </div>
                    @*<i-button class="btn" v-on:click="getEneryList">查询</i-button>*@
                    <div style="margin-left:5px;float:left">
                        <i-form ref="searchForm" :model="searchForm" style="width:100%;z-index:1500" :label-width="50">
                            <table class="formTable">
                                <tr>
                                    <td>
                                        <form-item label="时间">
                                            <date-picker type="date" v-model="searchForm.time" style="width:160px" class="minWidth" :clearable="false" :editable="false" ></date-picker>
                                        </form-item>
                                    </td>
                                    @*<td>
                                        <form-item label="站室">
                                            <i-select v-model="PID" :filterable="true" :clearable="false" class="minWidth" style="width:160px">
                                                <i-option :value="item.PID" :key="item.PID" v-for="item in stationRomm">{{item.Name}}</i-option>
                                            </i-select>
                                        </form-item>
                                    </td>*@
                                    <!--
                                       <td>
                                           <form-item label="设备">
                                               <i-select v-model="searchForm.did" :filterable="true" :clearable="false" class="minWidth" style="width:160px">
                                                   <i-option value="">全部</i-option>
                                                   <i-option :value="item.DID" :key="item.DID" v-for="item in deviceList">{{item.DeviceName}}</i-option>
                                               </i-select>
                                           </form-item>
                                       </td>-->
                                    <td>
                                        <form-item label="区域">
                                            <div id="leftmenuSpace" class="inlineBlock"></div>
                                        </form-item>
                                    </td>
                                    <td>
                                        <form-item label="类型">
                                            <i-select v-model="searchForm.cotypeid" :filterable="true" :clearable="false" style="width:100px !important">
                                                <i-option value="0">全部</i-option>
                                                <i-option :value="item.ID" :key="item.ID" v-for="item in typeList">{{item.Name}}</i-option>
                                            </i-select>
                                        </form-item>
                                    </td>
                                    <td>
                                        <i-button class="btn" v-on:click="getEneryList" style="margin-top:0px">查询</i-button>
                                    </td>
                                </tr>
                            </table>
                        </i-form>
                    </div>
                </div>
            </div>
            <div class="bottomView main-item underFormView" style="margin-top:0px">
                <div class="con">
                    <i-table :columns="tableCol" :data="tableData" :height="tableHeight" :loading="loading" border></i-table>
                </div>
                <div style="margin:10px 0px;text-align:right" class="noprint">
                    <Page :total="total" :current="page" :page-size="rows" size="small" show-total show-elevator show-sizer
                          v-on:on-change="pageChange"
                          v-on:on-page-size-change="sizeChange" />
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/UserJS/EnergyQuery._jm.js?v=1.13"></script>
</body>
</html>

