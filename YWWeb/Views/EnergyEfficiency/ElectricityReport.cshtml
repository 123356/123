@{
    ViewBag.Title = "EnergyFormula";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源报告</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css" href="~/Content/css/EnergyDfficiency.css?v=1.32" />
    <script type="text/javascript" src="~/Content/js/jquery-1.7.2.min.js"></script>
    <script src="~/jquery-easyui-1.4.5/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="~/jquery-easyui-1.4.5/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/jquery-easyui-1.4.5/themes/bootstrap/easyui.css" />
    <link rel="stylesheet" type="text/css" media="screen,print" href="~/Content/css/printTable.css?v=1.02" />
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.jqprint.js?v=1.01"></script>
    <style type="text/css">
        .tree-icon {
            display: none
        }

        .tableTitle {
            text-align: center;
            font-weight: bold;
            line-height: 40px;
            font-size: 16px;
            border: 1px solid #e8eaec;
            border-bottom: 1px;
            background: #f8f8f9
        }

        table {
            /*width: 100% !important;
            height: 100% !important*/
        }

        .ivu-table-wrapper table {
            width: 100% !important
        }

        .printTable th {
            background: #eee
        }

        .printTable td, .printTable th {
            border: 1px solid #ccc;
            text-align: center;
            border-collapse: collapse;
            color: #333;
            padding: 5px 2px
        }

        .btn {
            float: none !important;
            padding: 5px 10px !important;
        }
    </style>
    <style media="print" type="text/css">
        .noprint {
            visibility: hidden;
        }
    </style>
</head>
<body>
    <div id="app" class="noPaddingBottom" style="background:#fff;padding:0;margin:0">
        <!--right s-->
        <div class="right allMain">
            <div class="bottomView main-item">
                <div class="module-title noprint">
                    <img src="~/Content/images/energyDifficiency/fx.png" class="icon" />
                    <span>能源报告</span>
                    <div id="leftmenuSpace" style="display:inline-block"></div>
                    <i-select style="width:100px" v-model="dateType" placeholder="日期类型" v-on:on-change="dateTypeChange">
                        <i-option :value="1">日报表</i-option>
                        <i-option :value="2">月报表</i-option>
                        <i-option :value="3">年报表</i-option>
                    </i-select>
                    <date-picker :type="curDateType" v-model="time" style="width: 160px;font-size:12px" placeholder="请选择时间" v-on:on-change="dateChange"></date-picker>
                    <i-button icon="ios-print-outline" class="btn" v-on:click="openOrPrint">打印</i-button>
                </div>
                <div class="con noprint " id="printCon">
                    <div class="tableTitle" style="background:none;border:none">
                        {{UName}}
                    </div>
                    <div class="tableTitle">
                        {{title}}
                    </div>
                    <i-table :columns="tableCol" :data="tableData" :height="tableHeight" border class="ivuTable"></i-table>
                </div>
                @*<div style="margin-top:10px;text-align:right" class="noprint">
                        <Page :total="40" size="small" show-total show-elevator show-sizer />
                    </div>*@
            </div>
        </div>
        <!--right e-->
        <Modal v-model="modalVisable" class="iviewModal printModal" :closable="false" :footer-hide="true">
            <p slot="header" class="noprint">
                <Icon type="ios-print-outline"></Icon>
                <span>打印预览</span>
                <i-button type="primary" class="btn" v-on:click="ok">打印</i-button>
            </p>
            <div class="con " id="printModal">
                <div class="tableTitle">
                    {{title}}
                </div>
                @*<i-table :columns="tableCol" :data="tableData" border class="ivuTable" style="width:100%"></i-table>*@
                <table class="printTable">
                    <tr>
                        <th v-for="item in tableCol">{{item.title}}</th>
                    </tr>
                    <tr v-for="item in printTableData">
                        <td v-for="c in item">{{c}}</td>
                    </tr>
                </table>

            </div>
            @*<div slot="footer" class="noprint">
                    <i-button  type="default" class="btn" v-on:click="modalVisable=false">取消</i-button>
                    <i-button type="primary" class="btn" v-on:click="ok">打印</i-button>
                </div>*@
        </Modal>
    </div>
    <script type="text/javascript" src="~/Content/UserJS/ElectricityReport._zc.js?v=1.186"></script>
</body>
</html>

