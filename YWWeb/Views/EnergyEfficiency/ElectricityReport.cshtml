@{
    ViewBag.Title = "EnergyFormula";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源报告</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css"  href="~/Content/css/EnergyDfficiency.css?v=1.01"/>
</head>
<body>
    <div id="app" class="noPaddingBottom" style="background:#fff;padding:0;margin:0">
        
        <!--right s-->
        <div class="right allMain">
            <div class="bottomView main-item">
                <div class="module-title">
                    <img src="~/Content/images/energyDifficiency/fx.png" class="icon" />
                    <Dropdown trigger="click" style="margin-right:15px" v-on:on-click="dropdownClick">
                        <span>
                            报表类型
                            <Icon type="md-arrow-dropdown" size="25" />
                        </span>
                        <dropdown-menu slot="list" v-for="item in reportType">
                            <dropdown-item :name="item.name">{{item.type}}</dropdown-item>
                        </dropdown-menu>
                    </Dropdown>
                    <i-select style="width:100px" v-model="curDepart" placeholder="科室" v-on:on-change="departmentChange" v-show="curReportType==1">
                        <i-option :value="item.id" v-for="item in departmentList">{{item.name}}</i-option>
                        
                    </i-select>
                    <i-select style="width:100px" v-model="curDateType" placeholder="日期类型" v-on:on-change="dateTypeChange">
                        <i-option value="date">日报表</i-option>
                        <i-option value="month">月报表</i-option>
                        <i-option value="year">年报表</i-option>
                    </i-select>
                    <date-picker :type="curDateType" style="width: 160px;font-size:12px" placeholder="请选择时间"></date-picker>

                    <i-button icon="ios-print-outline" class="btn">打印</i-button>
                </div>
                <div class="con">
                    
                    <i-table :columns="tableCol" :data="tableData" :height="tableHeight" border></i-table>
                </div>
                
            </div>
        </div>
        <!--right e-->
    </div>

    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script  type="text/javascript" src="~/Content/UserJS/ElectricityReport._zc.js?v=1.09"></script>
</body>
</html>

