@{
    ViewBag.Title = "Consume";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源消耗</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css"  href="~/Content/css/EnergyDfficiency.css?v=1.30"/>
</head>
<body>
    <div id="app" class="noPaddingBottom" >
        <div class="left flex-item">
            <div class="module-title">
                <img src="~/Content/images/energyDifficiency/yc.png" class="icon"/>
                <span>用能异常</span>
                <button class="btn">对比</button>
            </div>
            <dv class="list consumeList" style="overflow:hidden">
                <i-table ref="selection" :columns="listColumns" :data="listData" :height="listHeight" :width="listWidth"  ></i-table>
            </dv>
        </div>
        <!--right s-->
        <div class="right flex-item">
            <div class="top">
                <div class="right-top-left">
                    <div class="module-title">
                        <img src="~/Content/images/energyDifficiency/barAndLine.png" class="icon" />
                        <span>实时用能趋势</span>
                    </div>
                    <div class="barAndLine">
                        <div class="datePicekerView">
                        <radio-group v-model="dateType" type="button" size="small">
                            <Radio label="0">日</Radio>
                            <Radio label="1">周</Radio>
                            <Radio label="2">月</Radio>
                            <Radio label="3">年</Radio>
                        </radio-group>
                    </div>
                        <div id="barAndLine" class="chart" style="width:100%;height:100%"></div>
                    </div>
                </div>
               
                <div class="right-top-right">
                    <div class="module-title">
                        <img src="~/Content/images/energyDifficiency/qx.png" class="icon" />
                        <span>实际能耗和预测曲线</span></span>
                    </div>
                    <div class="barAndLine">
                        <div style="overflow:hidden;position:absolute;width:100%;height:100%">
                            <div class="chart" id="energyConLine" style="width:100%;height:100%;"></div>
                        </div>
                        
                    </div>

                </div>
            </div>
            <div class="bottom">
                <div class="module-title">
                    <img src="~/Content/images/energyDifficiency/fx.png" class="icon" />
                    <span>异常诊断分析</span>
                </div>
                <div>
                    <i-table border ref="selection" :columns="analysisColumns" :data="analysisData" :height="analysisTableHeight"></i-table>
                </div>
            </div>
        </div>
        <!--right e-->
    </div>

    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script  type="text/javascript" src="~/Content/UserJS/Consume._zc.js?v=1.67"></script>
</body>
</html>

