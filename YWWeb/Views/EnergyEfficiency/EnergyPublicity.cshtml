@{

    ViewBag.Title = "EnergyFormula";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能效公示</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css" href="~/Content/css/EnergyDfficiency.css?v=1.34" />
    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/jquery-easyui-1.4.5/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="~/jquery-easyui-1.4.5/easyui-lang-zh_CN.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/jquery-easyui-1.4.5/themes/bootstrap/easyui.css" />
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
</head>
<body>
    <div id="app" class="noPaddingBottom" style="background:#fff;padding:0;margin:0">
        <Spin size="large" fix v-if="loading"></Spin>
        <!--right s-->
        <div class="right allMain">
            <div class="topView main-item">
                <div class="module-title">
                    <img src="~/Content/images/energyDifficiency/barAndLine.png" class="icon" />
                    <span>能效公示</span>
                    <date-picker type="date" :clearable="false" v-model="time" v-on:on-change="dateChange" class="datePicker"></date-picker>
                    <div id="leftmenuSpace" class="inlineBlock"></div>
                    <div class="inlineBlock">
                        <i-button class="userBtn" v-on:click="showInfo">显示</i-button>
                        <i-button class="userBtn" v-for="item in userButtons" v-on:click="userBtnClick(item.Location)">{{item.ModuleName}}</i-button>
                    </div>
                </div>
                <div class="con">
                    <div class="datePicekerView">
                        @*<date-picker type="date" size="small" :clearable="false" v-model="time" v-on:on-change="dateChange"></date-picker>*@
                    </div>
                    <div class="chart" id="barChart" style="height:100%;width:100%"></div>
                </div>
            </div>
            <div class="bottomView main-item">
                <div class="module-title">
                    <img src="~/Content/images/energyDifficiency/fx.png" class="icon" />
                    <span>高耗能列表</span>
                </div>
                <div class="con">
                    <i-table :columns="tableCol" :data="tableData" :height="tableHeight" border></i-table>
                </div>
            </div>
        </div>
        <!--right e-->
    </div>
    <script type="text/javascript" src="~/Content/UserJS/EnergyPublicity._jm.js"></script>
</body>
</html>

