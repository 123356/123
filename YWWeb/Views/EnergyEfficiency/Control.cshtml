@{
    ViewBag.Title = "Consume";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源管控</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" type="text/css" href="~/Content/css/EnergyDfficiency.css?v=1.10" />
    <script type="text/javascript" src="https://api.map.baidu.com/api?v=2.0&ak=kZsKlcEXbTKGC3ETRSWirVWt&s=1"></script>
    <script type="text/javascript" src="~/Content/baiduMap/script/infobox.js"></script>
    <script type="text/javascript" src="https://api.map.baidu.com/library/TextIconOverlay/1.2/src/TextIconOverlay_min.js"></script>
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.11&key=c445b00fbea13a22f9a7ac87f0e10897"></script>

</head>
<body>
    <div id="EnergyControl">
        <div class="mapView">
            <!--<div class="isShowListView" :style="{left:isShowLeft==0?'':isShowLeft+'px'}" v-on:click="isShowListChange"/><Icon type="ios-arrow-forward" ></div>-->
            
            <div class="loadListView" :style="{'height':loadViewHeight+'px'}">
                <div class="header">能耗主体<span class="visibleIcon" v-on:click="isShowListChange"><Icon type="ios-arrow-down" /></span></div>
                <div class="con">
                    <div class="searchForm">
                        <i-input search enter-button placeholder="能耗主体名称" />
                    </div>
                    <div class="listView" :style="{'height':listViewHeight+'px'}">
                        <div class="list-item">
                            <div class="imgView"><img src="~/Content/images/energyDifficiency/heat.png" /></div>
                            <div class="title">
                                <span class="dec">国家电网国际发展有限公司</span>
                                <p><span class="numText">32.6</span>kW·h</p>
                            </div>
                        </div>
                        <div class="list-item">
                            <div class="imgView"><img src="~/Content/images/energyDifficiency/heat.png" /></div>
                            <div class="title">
                                <span class="dec">国家电网国际发展有限公司</span>
                                <p><span class="numText">32.6</span>kW·h</p>
                            </div>
                        </div>
                        
                    </div>
                </div>
               
            </div>
            
            <div class="map" id="map"></div>

        </div>

        <div class="statisticsView">
            <div class="EnergySavingView">
                <div class="staticTitle">
                    节能统计
                </div>
                <div class="con">
                    <h4>总节能量</h4><br />
                    <span class="subDec">(由2013-08-12至今)</span><br />
                    <h1>845.6</h1>
                    <span class="resultText">节能率：<b>36.8%</b></span>
                </div>
            </div>

            <div class="achievementsView">
                <div class="staticTitle">
                    节能改造成功展示
                </div>
                <div class="con alignLeft">
                    <div class="resultInfoView">
                        <ul>
                            <li>项目名称：{{achDataSelect.name}}</li>
                            <li>竣工时间：{{achDataSelect.endTIme}}</li>
                            <li>累计节能量：<span>{{achDataSelect.jn}}kW·h</span></li>
                            <li>相对节能率：<span>{{achDataSelect.jnl}}%</span></li>
                            
                           
                        </ul>
                    </div>

                </div>

                <div class="pageView">
                    <span class="page prev" v-on:click="changeCurPage('prev')"> <Icon type="md-arrow-dropleft" /></span>
                    {{page.cur}}/{{page.total}}
                    <span class="page next" v-on:click="changeCurPage('next')"><Icon type="md-arrow-dropright" /></span>
                </div>
            </div>

            <div class="chartView" >
                <div class="staticTitle">
                    能耗占比
                </div>
                <div class="con">
                    <div class="chart" id="pieChart" style="width:100%;height:100%"></div>
                </div>
            </div>

            <div class="overviewBtn">总览</div>

        </div>

    </div>

    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script type="text/javascript" src="~/Content/UserJS/Control._zc .js?v=1.12"></script>
</body>
</html>

