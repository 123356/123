@{
    ViewBag.Title = "EnergyOverview";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>能源总览</title>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/iview/dist/styles/iview.css?v=1.01">
    <link rel="stylesheet" href="~/Content/css/modalForm.css?v=1.03" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/EnergyDfficiency.css?v=1.15" />
</head>
<body>
    <div id="app" style="padding:0">
        <div class="left flex-item">
            <div class="chartView">
                <div class="item">
                    <div class="chartTitle">
                      
                        <date-picker type="month" placeholder="" format="yyyy-MM能源总费用(万元)" v-model="curDate" :clearable="false" class="datePicker"></date-picker>
                    </div>
                    <div class="main">
                        <div class="chart" id="powerChart" style="width:100%;height:100%"></div>
                    </div>
                    <div class="footer">
                        <div class="footer-item">预算：900</div>
                        <div class="footer-item">同比： 21%<Icon type="md-arrow-round-up" color="#d0747c" /> </div>
                    </div>
                </div>
                <div class="item">
                    <div class="chartTitle">
                        <span>12月能源费用比例</span>
                    </div>
                    <div class="main" style="height:85%">
                        <div class="chart" id="energyMoneyChart" style="width:100%;height:100%"></div>
                    </div>
                </div>
                <div class="item lastItem">
                    <div class="chartTitle">
                        <span>12月万元每平米能耗</span>
                    </div>
                    <div class="main">
                        <p>0.236<span class="dw">(万元/㎡)</span></p>
                        <div class="footer">
                            <div class="footer-item">预算：900</div>
                            <div class="footer-item">同比： 21%<Icon type="md-arrow-round-up" color="#d0747c" /> </div>
                        </div>
                        <div class="footerBtn" style="margin-top:5px">
                            <button class="btn">分项数据</button>
                        </div>
                    </div>


                </div>
            </div>

        </div>

        <div class="right flex-item EnergyModule">
            <!--电-->
            <div class="right-module">
                <div class="header">
                    <Icon type="md-close" class="closeIcon" color="#ccc" v-on:click="closeModule" />
                </div>
                <div class="main">
                    <div class="module-item typeTitle">
                        <div class="imgView">
                            <img src="~/Content/images/energyDifficiency/electric.png" />
                        </div>
                        <p>电</p>
                    </div>
                    <div class="module-item info">
                        <p>用电预算<span>1000万元</span></p>
                        <p>当前费用<span>960万元</span></p>
                        <p>当前能耗<span>728.3kW·h</span></p>

                    </div>
                    <div class="module-item pieChart">
                        <div class="chart" id="electricPieChart"></div>
                    </div>
                    <div class="module-item barChart">
                        <div class="chart" id="electricBarChart"></div>
                    </div>
                </div>
            </div>
            <!--水-->
            <div class="right-module">
                <div class="header">
                    <Icon type="md-close" class="closeIcon" color="#ccc" v-on:click="closeModule" />
                </div>
                <div class="main">
                    <div class="module-item typeTitle">
                        <div class="imgView">
                            <img src="~/Content/images/energyDifficiency/water.png" />
                        </div>
                        <p>水</p>
                    </div>
                    <div class="module-item info">
                        <p>用电预算<span>1000万元</span></p>
                        <p>当前费用<span>960万元</span></p>
                        <p>当前能耗<span>728.3kW·h</span></p>
                    </div>
                    <div class="module-item pieChart">
                        <div class="chart" id="waterPieChart"></div>
                    </div>
                    <div class="module-item barChart">
                        <div class="chart" id="waterBarChart"></div>
                    </div>
                </div>
            </div>
            <!--气-->
            <div class="right-module">
                <div class="header">
                    <Icon type="md-close" class="closeIcon" color="#ccc" v-on:click="closeModule" />
                </div>
                <div class="main">
                    <div class="module-item typeTitle">
                        <div class="imgView">
                            <img src="~/Content/images/energyDifficiency/heat.png" />
                        </div>
                        <p>气</p>
                    </div>
                    <div class="module-item info">
                        <p>用电预算<span>1000万元</span></p>
                        <p>当前费用<span>960万元</span></p>
                        <p>当前能耗<span>728.3kW·h</span></p>
                    </div>
                    <div class="module-item pieChart">
                        <div class="chart" id="gasPieChart"></div>
                    </div>
                    <div class="module-item barChart">
                        <div class="chart" id="gasBarChart"></div>
                    </div>
                </div>
            </div>

            <!--add module-->
            <div class="right-module addOptionModule">
                <i-button class="btn addOptionBtn" type="default" icon="md-add" v-on:click="addModal1Visable=true">添加重点能源</i-button>
            </div>

        </div>

        <!--添加模态框-->
        <Modal v-model="addModal1Visable" class="iviewModal addEnergyModal" footer-hide="true" title="添加能源" v-on:on-visible-change="modalVisableChange">
            <i-form ref="addForm" :model="addForm" :rules="rules" style="width:100%" :label-width="90">
                <table style="width:100%">
                    <tr>
                        <td>
                            <form-item prop="type" label="能源类型">
                                <i-select v-model="addForm.type">
                                    <i-option :value="0" :key="0">电</i-option>
                                    <i-option :value="1" :key="1">水</i-option>
                                </i-select>
                            </form-item>
                        </td>
                        <td>
                            <form-item prop="department" label="科室" class="moneyView">
                                <i-select v-model="addForm.department">
                                    <i-option :value="0" :key="0">急诊科</i-option>
                                    <i-option :value="1" :key="1">内科</i-option>
                                </i-select>
                            </form-item>
                        </td>
                    </tr>
                   
                    <tr>
                        <td colspan="2" class="btnTd" style="padding-top:20px">
                            <button type="button" class="btn okBtn" v-on:click="addEnergy">添加</button>
                            <button type="button" class="btn cancelBtn" v-on:click="addModal1Visable=false">关闭</button>
                        </td>
                    </tr>

                </table>


            </i-form>
        </Modal>

    </div>



    <script type="text/javascript" src="~/Content/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/js/echarts.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/vue.min.js"></script>
    <script type="text/javascript" src="~/Content/js/vue-resource.min.js"></script>
    <script type="text/javascript" src="~/Content/iview/dist/iview.js"></script>
    <script type="text/javascript" src="~/Content/UserJS/EnergyOverview._zc.js?v=1.16"></script>
</body>
</html>

