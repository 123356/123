@{
    ViewBag.Title = "设备列表";
    S5001Web.Controllers.LoginAttribute loginbll = new S5001Web.Controllers.LoginAttribute();
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeviceIList</title>
    @Html.Partial("~/Views/Home/BaseHTML.cshtml")
    <script src="~/Content/js/jquery.tabs.js" type="text/javascript"></script>
    <script src="~/Content/UserJS/tab._jm.js" type="text/javascript"></script>
</head>
<body>
    <table id="list_data" style="width: auto;" idfield="DID" pagination="true" data-options="iconCls:'icon-save',rownumbers:true,pageSize:20,pageList:[10,15,20,30,50],toolbar:'#tb',method:'post',striped:true"
           fitcolumns="true">
        <thead>
            <tr>
                <th field='11' checkbox="true">
                </th>
                <th field='DID' width="60px">
                    设备ID
                </th>
                <th field='DeviceCode' width="60px">
                    设备编码
                </th>
                <th field='DeviceName' width="100px">
                    设备名称
                </th>
                <th field='PName' width="100px">
                    所属站室
                </th>
                <th field='DeviceModel' width="60px">
                    设备型号
                </th>
                <th field='MFactory' width="100px">
                    生产厂家
                </th>
                <th field='BuyTime' width="100px" data-options="formatter: DateFormat">
                    购买时间
                </th>
                <th field='InstallAddr' width="100px">
                    安装地点
                </th>
                <th field='UseState' width="60px" data-options="formatter:DeviceUseState">
                    使用状态
                </th>
                <th field='LastMtcDate' width="100px" data-options="formatter: DateFormat">
                    最后维护日期
                </th>
                <th field='Company' width="100px">
                    所属单位
                </th>
                <th field='BuildDate' width="100px" data-options="formatter: DateFormat">
                    建档日期
                </th>
                <th field='OrderBy' width="60px">
                    显示顺序
                </th>
            </tr>
        </thead>
    </table>
    <div id="tb" class="searchbar">
        <div class="searchrow">
            站室:
            <select id="SPID" style="width: 200px;"></select>
            设备名称:
            <input id="dname" />
            生产厂家:
            <input id="mname" />
        </div>
        <div id="userbutton" class="searchbutton">
        </div>
    </div>
    <script type="text/javascript">

        var uid = @loginbll.CurrentUser.UserID;

    </script>
    <script src="~/Content/UserJS/DeviceList._jm.js"></script>
    <script type="text/javascript" src="~/Content/UserJS/ResizeList._jm.js"></script>
    <div id="detailwin" title="查看设备详情" class="easyui-window" closed="true" style="width: 900px;
        height: 550px; padding: 5px;" minimizable="false" maximizable="false" collapsible="false">
    </div>
    <div id="editwin" title="编辑设备信息" class="easyui-window" closed="true" style="width: 900px;
        height: 550px; padding: 5px;" minimizable="false" maximizable="false" collapsible="false">
    </div>
</body>
</html>
