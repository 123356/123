    $(function () {
        //alert($(window).height());
        $('.ClickMe').click(function () {
            //$('#code').center();
            $('.code').fadeIn();
        });
        $('.closebt').click(function () {
            $('.code').fadeOut();
        }); //
        //	$('body').click(function() {
        //        $('.code').fadeOut();
        //    });   

    })
</script>
</html>
