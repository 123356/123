@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OrderList</title>
    @Html.Partial("~/Views/Home/BaseHTML.cshtml")
    <script src="~/Content/UserJS/lbywfw._jm.js" type="text/javascript"></script>
    <style type="text/css">
        .d_l_t{height:20px; text-align:right; background-color:#f0f6f4 ; padding:3px 15px; padding-bottom:0; border: solid 1px #ebebeb;font-size:11px;width:80px;
           text-align: justify;
           overflow-x:hidden;
           overflow-y:hidden;
          line-height:0px;
}
            .d_l_t:after {
                width: 70px;
                height: 0px;
                display: inline-block;
                content: '';
            }
    </style>
</head>
<body style="height:100%">
   

       
        <table id="list_data" style="width: auto;height:95% " idfield="OrderID" pagination="true"
               data-options="iconCls:'icon-save',rownumbers:true,pageSize:50,pageList:[10,20,50],toolbar:'#tb',method:'get',striped:true"
               fitcolumns="true" fit="true">
            <thead>
                <tr>
                    <th field='OrderID' checkbox="true">
                    </th>
                    <th field='CreateDate' width="50px">
                        发布日期
                    </th>
                    <th field='OrderNO' width="50px">
                        工单编号
                    </th>
                    <th field='PName' width="40px">
                        站室
                    </th>
                    <th field='OrderContent' width="100px">
                        工单内容
                    </th>
                    <th field='UserName' width="40px">
                        检查人
                    </th>
                    <th field='PlanDate' width="60px">
                        执行日期
                    </th>
                    <th field='CheckDate' width="60px">
                        完成日期
                    </th>
                    <th field='Priority' width="30px">
                        优先级
                    </th>
                    <th field='OrderState' width="70px">
                        状态
                    </th>
                    <th field='IsQualified' width="40px">
                        是否合格
                    </th>
                    <th field='CheckInfo' width="100px">
                        检查情况
                    </th>
                </tr>
            </thead>
        </table>
        <div id="tb" class="searchbar">
            <div class="searchrow">
                站室:
                <select id="PDRName" style="width: 150px;"></select>
                工单内容:
                <input id="ocontent" />
                工单类型:
                <select id="otype" class="easyui-combobox" style="width: 150px;">
                    <option value="0" selected>所有工单</option>
                    <option value="日常巡检">日常巡检</option>
                    <option value="应急抢修">应急抢修</option>
                    <option value="检修试验">检修试验</option>
                </select>
                检查人:
                <input id="uname" />
            </div>
            <div id="userbutton" class="searchbutton">
            </div>
            
        </div>
        <div id="editwin" title="编辑工单信息" class="easyui-window" closed="true" style="width: 1000px;
        height: 600px;  padding: 5px 5px 10px 5px;" minimizable="false" maximizable="false" collapsible="false">
        </div>
        <div id="detailwin" title="查看工单详情" class="easyui-window" closed="true" style="width: 1000px;
         padding: 5px 5px 10px 5px;" minimizable="false" maximizable="false" collapsible="false">
        </div>
        <div id="show" style="display: none; z-index: 999; height: auto; width: 750px; top: 10px;
        left: 100px; position: absolute; border: 2px  solid #e8f0ff;">
        </div>

    <script src="~/Content/UserJS/OrderList._jm.js"></script>
    <script type="text/javascript" src="~/Content/UserJS/ResizeList._jm.js"></script>
    
</body>
</html>
