@{
    ViewBag.Title = "通讯状态列表";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AlarmSysTableList</title>
    @Html.Partial("~/Views/Home/BaseHTML.cshtml")
    <script src="~/Content/js/jquery.jqprint.js" type="text/javascript"></script>
    <body>
        <table id="list_data" style="width: auto;" idfield="AlarmID" pagination="true" data-options="iconCls:'icon-save',rownumbers:true,pageSize:50,pageList:[10,20,50],toolbar:'#tb',method:'get',striped:true"
            fitcolumns="true">
            <thead>
                <tr>
                    <th field='ALarmType' width="20px">
                        报警类型
                    </th>
                    <th field='AlarmDateTime' width="40px">
                        日期
                    </th>
                    <th field='PDRName' width="40px">
                        站室名称
                    </th>
                    <th field='DevicesName' width="40px">
                        设备名称
                    </th>
                    <th field='TagName' width="40px">
                        点名称
                    </th>
                    <th field='AlarmCate' width="40px">
                        描述
                    </th>
                    <th field='AlarmState' width="40px" data-options="formatter:AlarmStateReset">
                        通讯状态
                    </th>
                </tr>
            </thead>
        </table>
        <div id="tb" class="searchbar">
            <div class="searchrow">
                站室:
                <select id="SPID" style="width: 150px;">
                </select>
                起始时间：
                <input id="StartDate" name="PlanDate" class="easyui-datebox" style="width: 150px;" />
                结束时间：
                <input id="EndDate" name="PlanDate" class="easyui-datebox" style="width: 150px;" />
            </div>
            <div id="userbutton" class="searchbutton">
            </div>
        </div>
        <script src="~/Content/UserJS/AlarmSysTableList_jm.js"></script>
        <script src="~/Content/UserJS/ResizeList._jm.js" type="text/javascript"></script>
    </body>
</html>
