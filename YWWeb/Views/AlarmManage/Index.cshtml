@{
    ViewBag.Title = "报警列表";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Html.Partial("~/Views/Home/BaseHTML.cshtml")
    <script src="~/Content/js/jquery.jqprint.js" type="text/javascript"></script>
    <link href="~/Content/css/common.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <table id="list_data" style="width: auto;" idfield="AlarmID" pagination="true" data-options="iconCls:'icon-save',rownumbers:true,pageSize:50,pageList:[10,20,50],toolbar:'#tb',method:'post',striped:true"
           fitcolumns="true">
        <thead>
            <tr>
                <th field='ALarmID' checkbox="true">
                </th>
                <th field='ALarmType' width="30px" align="center">
                    报警级别
                </th>
                <th field='AlarmDate' width="40px">
                    日期
                </th>
                <th field='AlarmTime' width="40px">
                    时间
                </th>
                <th field='AlarmCate' width="30px">
                    报警类型
                </th>
                <th field='AlarmValue' width="20px" data-options="formatter:ValueReset">
                    数值
                </th>
                <th field='AlarmMaxValue' width="20px">
                    阈值
                </th>
                @*<th field='AlarmAddress' width="60px">
                        报警描述
                    </th>*@
                <th field='RArae' width="60px">
                    报警位置
                </th>
                <th field='Company' width="60px">
                    监测站点
                </th>
                <th field='AlarmConfirm' width="20px">
                    确认
                </th>
                <th field='UserName' width="20px">
                    确认人
                </th>
                <th field='ConfirmDate' width="60px">
                    确认时间
                </th>
                <th field='AlarmState' hidden="true">
                </th>
                <th field='AlarmTreatment' width="60px">
                    处理信息
                </th>
            </tr>
        </thead>
    </table>
    <div id="tb" class="searchbar">
        <div class="searchrow">
            站室:
            <select id="SPID" style="width: 200px;"></select>
            数据类型:
            <select id="cbType" style="width: 200px;"></select>
            开始时间：
            <input id="StartDate" name="PlanDate" class="easyui-datebox" />
            结束时间：
            <input id="EndDate" name="PlanDate" class="easyui-datebox" />
        </div>
        <div id="userbutton" class="searchbutton">
        </div>
    </div>

    <div id="querens" title="批量确认报警" class="easyui-dialog" closed="true" style="width: 600px; height: 350px; padding: 5px;display:none"
         minimizable="false" maximizable="false" collapsible="false">
        <div class="container">
            <div class="row clearfix">
                <div>
                    <div id="info" style="height:80px;background-color:white;">
                        <p style="font-size:30px;text-align:center;">您已选择<span id="Anum" style="font-size:30px;text-align:center; color:red;">0</span>条报警记录，统一处理</p>
                    </div>
                    <div style="padding-right:50px;margin-left:170px;margin-top: -7px;">
                        <div>
                            选择批注：
                        </div>
                        <div class="radio m">
                            <label>
                                <input type="radio" name="group1" id="optionsRadios1" value="设备调试">设备调试
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="group1" id="optionsRadios2" value="真实故障">真实故障
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="group1" id="optionsRadios3" value="误报">误报
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="group1" id="optionsRadios4" value="其他">其他
                            </label>
                            <input id="ii" />
                        </div>
                    </div>
                    <button onclick="querensAlarm()" style="width: 116px;height: 31px;background-color: #1565c0;color:white;position: relative;left:223px;top:40px;">提交</button>
                </div>
            </div>
        </div>
    </div>
    


    <script src="~/Content/UserJS/AlarmIndex._zc.js"></script>
    <script src="~/Content/UserJS/ResizeList._jm.js" type="text/javascript"></script>
    <div id="editwin" title=" " class="easyui-window" closed="true" style="width: 630px;
        height: 600px; padding: 0px;" minimizable="false" maximizable="false" collapsible="false">
    </div>
</body>
</html>
