                </select>*@
            </div>
            <div class="searchrow">
                预置位：
                <input id="cbposition" class="easyui-combobox" style="width: 150px; height: 26px;" />
                @* <select id="cbposition" style="width: 150px; height: 26px;">
                </select>*@
            </div>
            <div class="searchrow">
                日期：
                <input id="cbDate" class="easyui-combobox" style="width: 150px; height: 26px;" />
