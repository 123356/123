@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StationRoom</title>
    @Html.Partial("~/Views/Home/BaseHTML.cshtml")
    <script src="~/Content/UserJS/lbywlfmu._jm.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/css/planpub.css"></link>
    <link rel="stylesheet" type="text/css" href="~/Content/css/pingmiantu0719.css"></link>
</head>
<body>
<div class="ui_sidebar">
    <div class="leftmenu_content" id="leftmenuSpace">
    </div>
</div>
<div class="ui_content">            
    <div class="ui_box">
         <div class="pmmain plancontent"id="">
            <!--开关-->
            <!--第一组-->
            <div class="switch switch_group1">
                <span><label>风机</label><button class="radius5">启动</button><button class="radius5">停止</button></span>
                <span><label>照明</label><button class="radius5">开启</button><button class="radius5">关闭</button></span>
                <span><label>空调</label><button class="radius5">开启</button><button class="radius5">关闭</button></span>
            </div>
            <!--第二组-->
            <div class="switch switch_group2">
                <span><label>风机</label><button class="radius5">启动</button><button class="radius5">停止</button></span>
                <span><label>照明</label><button class="radius5">开启</button><button class="radius5">关闭</button></span>
            </div>
            <!--第三组-->
            <div class="switch switch_group3">
                <span><label>风机</label><button class="radius5">启动</button><button class="radius5">停止</button></span>
                <span><label>照明</label><button class="radius5">开启</button><button class="radius5">关闭</button></span>
            </div>

            <!--温湿度、噪音-->
            <!--第一组-->
            <div class="wet_temperature wt_group1">
                <span><label>室内温度</label><button>32℃</button></span>
                <span><label>室内湿度</label><button>90%</button></span>
            </div>
            <!--第二组-->
            <div class="wet_temperature wt_group2">
                <span><label>室内温度</label><button>32℃</button></span>
                <span><label>室内湿度</label><button>90%</button></span>
                <span><label>噪音</label><button>54db</button></span>
            </div>
            <!--第三组-->
            <div class="wet_temperature wt_group3">
                <span><label>室内温度</label><button>32℃</button></span>
                <span><label>室内湿度</label><button>90%</button></span>
                <span><label>噪音</label><button>42db</button></span>
            </div>
         </div>
    </div>
</div>


</body>
</html>
<script type="text/javascript">
    $("#currPosition", window.top.document).html("当前位置：越秀局 > 触摸屏");
    BuildLeftMenu();
    $(document).ready(function () {
        $(".ui_content").width($(document).width() - $(".ui_sidebar").width());//改变右边宽度

        //开关按钮

        $(".switch span button").on("click", function () {
            $(this).addClass("switch_active").siblings().removeClass("switch_active");
        });
    });
</script>
<script src="~/Content/UserJS/lbywpln._jm.js" type="text/javascript"></script>
